<div class="w-full bg-white shadow-md rounded-b-2xl">
  <nav class="flex items-center justify-between px-6 py-3">
    <!-- Left: Logo/Brand -->
    <a href="#" class="text-2xl font-bold text-orange-500 px-2 py-1 rounded-xl hover:bg-orange-50 transition-colors">| Side Quest</a>

    <!-- Center: Links -->
    <div>
      <ul class="flex gap-4">
        <li>
          <a href="#" class="px-4 py-2 text-indigo-700 font-bold rounded-xl hover:underline transition-colors">Quests</a>
        </li>
        <li>
          <a href="#" class="px-4 py-2 text-indigo-700 font-bold rounded-xl hover:underline transition-colors">Missions</a>
        </li>
        <li>
          <a href="#" class="px-4 py-2 text-indigo-700 font-bold rounded-xl hover:underline transition-colors">Pledge</a>
        </li>
      </ul>
    </div>

    <!-- Right: Sign Out Button -->
    <div>
      <% if authenticated? %>
        <%= button_to "Sign out", session_path, method: :delete, class: "bg-rose-600 px-4 py-2 text-white font-bold rounded-xl shadow hover:bg-rose-700 transition-colors" %>
      <% else %>
        <%= link_to "Sign in", new_session_path, class: "bg-white px-4 py-2 text-indigo-700 font-semibold rounded-xl shadow hover:bg-indigo-50 transition-colors" %>
      <% end %>
    </div>
  </nav>
</div>
