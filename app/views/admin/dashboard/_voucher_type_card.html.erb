<tr id="<%= dom_id(voucher_type) %>" class="hover:bg-indigo-50 transition-colors border-b-2 border-indigo-100">
  <td class="px-6 py-4 font-semibold text-indigo-900 text-lg"><%= voucher_type.title %></td>
  <td class="px-6 py-4 text-gray-700 text-base"><%= voucher_type.description %></td>
  <td class="px-6 py-4 text-indigo-600 text-sm break-all font-mono"><%= voucher_type.transaction_hash.presence || "-" %></td>
  <td class="px-6 py-4 text-gray-500 text-base">
    <span class="font-semibold"><%= voucher_type.created_at.strftime("%d %b %Y, %H:%M") %></span>
  </td>
</tr>
