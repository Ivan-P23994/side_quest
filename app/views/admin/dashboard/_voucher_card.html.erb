<tr id="<%= dom_id(voucher) %>" class="hover:bg-indigo-50 transition-colors border-b-2 border-indigo-100">
  <td class="px-6 py-4 font-semibold text-indigo-900 text-lg"><%= voucher.title %></td>
  <td class="px-6 py-4 text-gray-700 text-base"><%= voucher.description %></td>
  <td class="px-6 py-4 text-blue-700 text-base"><%= voucher.voucher_type&.title || '-' %></td>
  <td class="px-6 py-4 text-gray-700 text-base"><%= voucher.owner&.email_address || '-' %></td>
  <td class="px-6 py-4 text-gray-500 text-base">
    <span class="font-semibold"><%= voucher.created_at.strftime("%d %b %Y, %H:%M") %></span>
  </td>
  <td class="px-6 py-4">
    <% if voucher.redeemed? %>
      <span class="inline-flex items-center px-3 py-1 rounded-full bg-rose-100 text-rose-700 font-semibold text-sm">
        <!-- Heroicon: Check Circle -->
        <svg class="w-5 h-5 mr-1 text-rose-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2l4 -4"></path>
          <circle cx="12" cy="12" r="9" stroke="currentColor" stroke-width="2" fill="none"/>
        </svg>
        Redeemed
      </span>
    <% else %>
      <span class="inline-flex items-center px-3 py-1 rounded-full bg-green-100 text-green-700 font-semibold text-sm">
        <!-- Heroicon: Lightning Bolt -->
        <svg class="w-5 h-5 mr-1 text-green-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        Active
      </span>
    <% end %>
  </td>
  <td class="px-6 py-4">
    <%#= render partial: "admin/dashboard/voucher_actions", locals: { voucher: voucher } %>
  </td>
</tr>
