<%= form_with(model: @voucher, url: admin_vouchers_path, id: "voucher-form", data: { action: "turbo:submit-end->modal#submitEnd"} ) do |form| %>

  <% if @voucher.errors.any? %>
    <div class="mb-6 rounded-xl bg-rose-100 border border-rose-400 px-6 py-4">
      <ul class="list-disc list-inside text-rose-700 font-medium">
        <% @voucher.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-7 px-4">
    <%= form.label :voucher_type_id, "Voucher Type", class: "font-semibold text-indigo-700 text-lg" %>
    <%= form.collection_select :voucher_type_id, @voucher_types, :id, :title, prompt: "Select Voucher Type", class: "block mt-2 shadow-md rounded-xl border-2 border-indigo-200 focus:border-indigo-400 outline-none px-4 py-2 w-full text-lg" %>
  </div>

  <div class="my-7 px-4">
    <%= form.label :title, class: "font-semibold text-indigo-700 text-lg" %>
    <%= form.text_field :title, class: "block mt-2 shadow-md rounded-xl border-2 border-indigo-200 focus:border-indigo-400 outline-none px-4 py-2 w-full text-lg", autocomplete: "off" %>
  </div>

  <div class="my-7 px-4">
    <%= form.label :description, class: "font-semibold text-indigo-700 text-lg" %>
    <%= form.text_area :description, class: "block mt-2 shadow-md rounded-xl border-2 border-indigo-200 focus:border-indigo-400 outline-none px-4 py-2 h-32 w-full text-lg resize-vertical", autocomplete: "off" %>
    <%= form.hidden_field :owner_id, value: current_user.id %>
  </div>

  <div class="my-7 px-4">
    <%= form.label :amount, "Amount to Mint", class: "font-semibold text-indigo-700 text-lg" %>
    <%= form.number_field :amount, min: 1, value: 1, class: "block mt-2 shadow-md rounded-xl border-2 border-indigo-200 focus:border-indigo-400 outline-none px-4 py-2 w-full text-lg" %>
  </div>

  <div class="rounded-b mt-8 px-4 sm:grid sm:grid-cols-2 sm:gap-4 sm:grid-flow-row-dense">
    <%= form.submit "Mint Voucher(s)", class: "w-full sm:col-start-2 bg-indigo-600 px-4 py-3 mb-4 text-white text-lg font-bold rounded-xl shadow-md hover:bg-indigo-700 transition-colors" %>
    <button type="button" data-action="click->modal#close" class="mt-3 w-full sm:mt-0 sm:col-start-1 mb-4 bg-gray-50 hover:bg-gray-100 rounded-xl shadow border border-gray-200 px-4 py-3 text-indigo-700 font-semibold transition-colors">
      Cancel
    </button>
  </div>
<% end %>
