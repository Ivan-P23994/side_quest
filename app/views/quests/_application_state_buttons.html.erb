<div class="flex space-x-2">
  <!-- Approve Button -->
<%= button_to approve_application_quest_path(application),
              title: "Approve Application",
              method: :patch,
              form: { data: { turbo: "true" } },
              class: "w-8 h-8 flex items-center justify-center rounded bg-green-500 hover:bg-green-600 text-white" do %>
  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
  </svg>
<% end %>

  <!-- Reject Button -->
  <%= button_to reject_application_quest_path(application),
                title: "Reject Application",
                method: :patch,
                form: { data: { turbo: "true" } },
                class: "w-8 h-8 flex items-center justify-center rounded bg-red-500 hover:bg-red-600 text-white" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <circle cx="12" cy="12" r="10" />
      <line x1="8" y1="12" x2="16" y2="12" />
    </svg>
  <% end %>
</div>
