<div class="col-span-1 flex space-x-2 justify-end items-center" id="<%= dom_id(quest) %>-buttons">
        <!-- Edit Button -->
        <%= link_to edit_quest_path(quest), class: "w-8 h-8 flex items-center justify-center rounded bg-indigo-400 hover:bg-indigo-500 text-white", data: { action: "click->modal#open", turbo_stream: "" } do %>
          <!-- Pencil/Edit icon SVG -->
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24" >
            <path d="M12 20h9" />
            <path d="M16.5 3.5a2.121 2.121 0 013 3L7 19l-4 1 1-4 12.5-12.5z" />
          </svg>
        <% end %>

        <!-- Deactivate Button -->
        <%= link_to quest_path(quest), data: { confirm: "Are you sure you want to delete this quest?", turbo_method: :delete }, class: "w-8 h-8 flex items-center justify-center rounded bg-red-500 hover:bg-red-600 text-white" do %>
          <!-- X icon SVG -->
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
            <line x1="18" y1="6" x2="6" y2="18"/>
            <line x1="6" y1="6" x2="18" y2="18"/>
          </svg>
        <% end %>
      </div>